<%- include("../includes/head.ejs") %>
<body>
  <%- include("../includes/navigation.ejs") %>
  <main>
    <% if (prods.length) { %>
    <div class="grid">
      <% prods.forEach(element => { %>

      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= element.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= element.imageUrl %> " alt="<%= element.title %> " />
        </div>
        <div class="card__content">
          <h2 class="product__price"><%= element.price %>$</h2>
          <p class="product__description"><%= element.description %></p>
        </div>
        <div class="card__actions">
          <a href="/admin/edit-product/<%=element.id %>?edit=true" class="btn"
            >Edit</a
          >
          <form
            class="product-form"
            method="POST"
            action="/admin/delete-product"
          >
            <button type="submit" class="btn">Delete</button>
            <input type="hidden" value="<%= element.id%> " name="productId" />
          </form>
        </div>
      </article>
      <% }) %>
    </div>
    <% } else { %>
    <h1>No Products</h1>
    <% } %>
  </main>
  <%- include("../includes/end.ejs") %>
</body>

<%- include("../includes/head.ejs") %>

<body>
  <%- include("../includes/navigation.ejs") %>
  <main>
    <% if (prods.length) { %>
    <div class="grid">
      <% prods.forEach(product => { %>

      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= product.productData.title %></h1>
        </header>
        <div class="card__content__cart">
          <div class="card__image_cart">
            <img
              src="<%= product.productData.imageUrl %> "
              alt="<%= product.productData.title %> "
            />
          </div>

          <div class="cart_prod_price">
            <p><%=product.productData.price %>$ x<%= product.qty %></p>
          </div>
        </div>
        <div class="card__actions">
          <form action="/cart-delete-item" method="POST">
            <button class="btn" type="submit">Delete</button>
          </form>
        </div>
      </article>
      <% }) %>
    </div>
    <% } else { %>
    <h1>No Products</h1>
    <% } %>
  </main>
  <%- include("../includes/end.ejs") %>
</body>
